@page
@model EditFFModel
@{
    ViewData["Title"] = "Edit";
}
<div class="container" id="formside">
    <form method="post">
        <div class="row mb-3">
            <label asp-for=@Model.EditFF.ID class="col-sm-2 col-form-label">ID:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for=@Model.EditFF.ID placeholder="ID">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for=@Model.EditFF.Name class="col-sm-2 col-form-label">Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for=@Model.EditFF.Name placeholder="Enter name of fast food">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for=@Model.EditFF.Ingredients class="col-sm-2 col-form-label">Recipes:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for=@Model.EditFF.Ingredients placeholder="Enter Recipes">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for=@Model.EditFF.Calories class="col-sm-2 col-form-label">Calories:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for=@Model.EditFF.Calories placeholder="Enter Calories">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for=@Model.EditFF.Rating class="col-sm-2 col-form-label">Rating:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for=@Model.EditFF.Rating placeholder="Enter Rating">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for=@Model.EditFF.Prices class="col-sm-2 col-form-label">Prices:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for=@Model.EditFF.Prices placeholder="Enter Prices">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for=@Model.EditFF.ImgURL class="col-sm-2 col-form-label">Image:</label>
            <div class="col-sm-10">
                <input type="url" class="form-control" asp-for=@Model.EditFF.ImgURL placeholder="Link Image">
            </div>
        </div>
        @* <div class="mb-3">
            <label asp-for=@Model.EditFF.ImgURL class="form-label">Image:</label>
            <input type="url" class="form-control" asp-for=@Model.EditFF.ImgURL placeholder="Link Image">
        </div> *@
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>