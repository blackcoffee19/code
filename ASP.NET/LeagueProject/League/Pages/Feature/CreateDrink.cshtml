@page
@model CreateDrinkModel
@{
    ViewData["Title"] = "Create Drink";
}
<div class="container" id="form-side">
    <form method="post">
        <div class="row mb-3">
            <label asp-for="NewDrink.Name" class="col-sm-2 col-form-label">Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="NewDrink.Name" placeholder="Enter name of drink">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="NewDrink.Ingredients" class="col-sm-2 col-form-label">Recipes:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="NewDrink.Ingredients" placeholder="Enter Recipes">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="NewDrink.Calories" class="col-sm-2 col-form-label">Calories:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="NewDrink.Calories" placeholder="Enter Calories">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="NewDrink.Rating" class="col-sm-2 col-form-label">Rating:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="NewDrink.Rating" placeholder="Enter Rating">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="NewDrink.Prices" class="col-sm-2 col-form-label">Prices:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="NewDrink.Prices" placeholder="Enter Prices">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="NewDrink.ImgURL" class="col-sm-2 col-form-label">Image:</label>
            <div class="col-sm-10">
                <input type="url" class="form-control" asp-for="NewDrink.ImgURL" placeholder="Link Image">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>