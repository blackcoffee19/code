@page
@model IndexModel
@{
    List<int> listt = new List<int>();
    int total = 0;
}
<div class="text-center">
    <h1 class="display-4">@Model.ContentHello()</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <h3>@ViewData["Des"]</h3>
    <ul>
        @for(int i = 0; i < 3; i++){
            int x = Model.Rand();
            listt.Add(x);
            <li>$@String.Format("{0:0.00}",x)</li>
        }
    </ul>
    <h4>@Model.Total @foreach(int list in listt){total += list;}@total</h4>
</div>
